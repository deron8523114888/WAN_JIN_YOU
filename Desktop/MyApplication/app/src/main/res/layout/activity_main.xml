<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Main_horizon_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Main_horizon_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:background="	#3A006F"
        app:layout_constraintBottom_toTopOf="@id/Main_horizon_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            app:layout_constraintBottom_toTopOf="@id/Head_horizon_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/Head_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/Head_horizon_1"
            app:srcCompat="@drawable/rank_2" />


        <TextView
            android:id="@+id/name"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@id/lv"
            app:layout_constraintLeft_toRightOf="@id/Head_vertical_1"
            app:layout_constraintRight_toLeftOf="@id/Head_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/Head_horizon_1" />

        <TextView
            android:id="@+id/lv"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="#D200D2"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@id/Head_horizon_2"
            app:layout_constraintLeft_toRightOf="@id/Head_vertical_1"
            app:layout_constraintRight_toLeftOf="@id/Head_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/diamond"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/diamond"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@id/money"
            app:layout_constraintLeft_toRightOf="@id/Head_vertical_2"
            app:layout_constraintRight_toLeftOf="@id/Head_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/Head_horizon_1" />


        <TextView
            android:id="@+id/money"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/money"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@id/Head_horizon_2"
            app:layout_constraintLeft_toRightOf="@id/Head_vertical_2"
            app:layout_constraintRight_toLeftOf="@id/Head_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/diamond" />


        <ImageView
            android:id="@+id/A"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/rank_2"
            app:layout_constraintBottom_toTopOf="@id/Head_horizon_2"
            app:layout_constraintLeft_toRightOf="@id/Head_vertical_3"
            app:layout_constraintRight_toLeftOf="@id/B"
            app:layout_constraintTop_toBottomOf="@id/Head_horizon_1" />

        <ImageView
            android:id="@+id/B"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/rank_2"
            app:layout_constraintBottom_toTopOf="@id/Head_horizon_2"
            app:layout_constraintLeft_toRightOf="@id/A"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Head_horizon_1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Head_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Head_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Head_vertical_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Head_horizon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Head_horizon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0sp"
        android:layout_height="0sp"
        android:background="@drawable/main_background"
        app:layout_constraintBottom_toTopOf="@id/Main_horizon_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Main_horizon_1">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/body_horizon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/body_horizon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/body_horizon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <TextView
            android:id="@+id/Jackpot"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/image"
            android:gravity="center"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@id/body_horizon_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/body_image"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="5sp"
            app:layout_constraintBottom_toTopOf="@id/body_horizon_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_horizon_1"
            app:srcCompat="@drawable/rank_2" />

        <TextView
            android:id="@+id/Marquee"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/marquee"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="                                                                      萬金遊賀上架!!全遊戲免費玩"
            android:textColor="@color/zxing_status_text"
            app:layout_constraintBottom_toTopOf="@id/body_horizon_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_horizon_2" />

        <requestFocus></requestFocus>


        <GridView
            android:id="@+id/Gridview"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:layout_marginTop="10sp"
            android:horizontalSpacing="5sp"
            android:numColumns="2"
            android:verticalSpacing="5sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/body_horizon_3">

        </GridView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0sp"
        android:layout_height="0sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Main_horizon_2">




        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8"/>

        <view
            android:id="@+id/view2"
            class="com.example.myapplication.View_ring"
            android:layout_width="0sp"
            android:layout_height="0sp"
            app:layout_constraintLeft_toRightOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/Window_Width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/Window_Height"/>

        <TextView
            android:id="@+id/Window_Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Window_Width"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_gradient"
        android:text="B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>